<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <context-param>
    <param-name>upload.location</param-name>
    <param-value>/Users/sergeilevchenko/downloads</param-value>
  </context-param>
  <servlet>
    <servlet-name>front-controller</servlet-name>
    <servlet-class>controller.FrontControllerServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>front-controller</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>MyFilter</filter-name>
    <filter-class>filter.MyFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>MyFilter</filter-name>
    <url-pattern>/userCabinet.jsp</url-pattern>
    <url-pattern>/users.jsp</url-pattern>
    <url-pattern>/addBook.jsp</url-pattern>
    <url-pattern>/blockedCabinet.jsp</url-pattern>
    <url-pattern>/bookshelf.jsp</url-pattern>
    <url-pattern>/messages.jsp</url-pattern>
    <url-pattern>/updateUsers.jsp</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>